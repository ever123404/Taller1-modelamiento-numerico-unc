  "# --- Ejercicio 3: Esquema implícito para difusión pura ---\n",
  "import scipy.linalg\n",
  "\n",
  "def solve_diffusion_implicit(x, t, C_initial, C_left_bc, C_right_bc):\n",
  "    Nx = len(x) - 1\n",
  "    Nt = len(t) - 1\n",
  "    dx = x[1] - x[0]\n",
  "    dt = t[1] - t[0]\n",
  "\n",
  "    r = dt / dx**2\n",
  "    print(f\"Parámetro de estabilidad implícita: r = {r:.4f}\")\n",
  "\n",
  "    # Matriz tridiagonal implícita A\n",
  "    diag_main = (1 + 2*r) * np.ones(Nx - 1)\n",
  "    diag_lower = -r * np.ones(Nx - 2)\n",
  "    diag_upper = -r * np.ones(Nx - 2)\n",
  "    A = np.diag(diag_main) + np.diag(diag_upper, 1) + np.diag(diag_lower, -1)\n",
  "\n",
  "    # Inicialización\n",
  "    C = np.zeros((Nt+1, Nx+1))\n",
  "    C[0, :] = C_initial(x)\n",
  "\n",
  "    for j in range(Nt):\n",
  "        # Lado derecho\n",
  "        b = C[j, 1:Nx].copy()\n",
  "\n",
  "        # Considerar condiciones de frontera\n",
  "        b[0] += r * C_left_bc\n",
  "        b[-1] += r * C_right_bc\n",
  "\n",
  "        # Resolución del sistema lineal\n",
  "        C[j+1, 1:Nx] = scipy.linalg.solve(A, b)\n",
  "        C[j+1, 0] = C_left_bc\n",
  "        C[j+1, Nx] = C_right_bc\n",
  "\n",
  "    return C"
 ]
}
