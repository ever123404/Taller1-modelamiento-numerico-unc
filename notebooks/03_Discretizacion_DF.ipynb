  "# --- Ejercicio 5: Análisis de estabilidad numérica ---\n",
  "def test_stability(dt_values, Nx=80, L=1.0, T=0.3, Pe=50.0, Da=0.0):\n",
  "    x = np.linspace(0, L, Nx+1)\n",
  "    results = []\n",
  "\n",
  "    for dt in dt_values:\n",
  "        Nt = int(T / dt)\n",
  "        t = np.linspace(0, T, Nt+1)\n",
  "        \n",
  "        print(f\"Probando con Δt = {dt:.5f} (Nt = {Nt})\")\n",
  "        try:\n",
  "            C = solve_adre_ftcs(x, t, Pe, Da, initial_pulse, 0.0, 0.0)\n",
  "            mass = calculate_mass(C, x)\n",
  "            stable = np.all(np.isfinite(C)) and not np.any(np.isnan(C)) and np.max(C) < 10.0\n",
  "        except Exception as e:\n",
  "            print(f\"  Error: {e}\")\n",
  "            stable = False\n",
  "            mass = np.nan * np.ones_like(t)\n",
  "\n",
  "        results.append((dt, stable, mass))\n",
  "\n",
  "    return results"
 ]
}
