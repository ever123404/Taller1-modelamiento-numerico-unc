  "# --- Ejercicio 2: Convergencia del método FTCS ---\n",
  "def calcular_solucion_referencia(Pe, x, t):\n",
  "    return solve_adre_ftcs(x, t, Pe, Da=0, C_initial=initial_pulse, C_left_bc=0.0, C_right_bc=0.0)\n",
  "\n",
  "def calcular_error_convergencia(Pe=1.0):\n",
  "    Nx_values = [10, 20, 40, 80, 160]\n",
  "    dx_values = []\n",
  "    errores = []\n",
  "    \n",
  "    # Solución de referencia con malla muy fina\n",
  "    Nx_ref = 640\n",
  "    x_ref = np.linspace(0, 1.0, Nx_ref+1)\n",
  "    t_ref = np.linspace(0, 0.3, 501)\n",
  "    C_ref = calcular_solucion_referencia(Pe, x_ref, t_ref)\n",
  "    C_ref_final = np.interp(np.linspace(0, 1.0, Nx_ref+1), x_ref, C_ref[-1])\n",
  "\n",
  "    for Nx in Nx_values:\n",
  "        x = np.linspace(0, 1.0, Nx+1)\n",
  "        t = np.linspace(0, 0.3, 501)\n",
  "        dx = x[1] - x[0]\n",
  "        dx_values.append(dx)\n",
  "\n",
  "        C_num = solve_adre_ftcs(x, t, Pe, Da=0, C_initial=initial_pulse, C_left_bc=0.0, C_right_bc=0.0)\n",
  "\n",
  "        # Interpolamos la referencia a la malla actual\n",
  "        C_ref_interp = np.interp(x, x_ref, C_ref[-1])\n",
  "        error = np.sqrt(np.mean((C_num[-1] - C_ref_interp)**2))\n",
  "        errores.append(error)\n",
  "\n",
  "    return dx_values, errores"
 ]
}
