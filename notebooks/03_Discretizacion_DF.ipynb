  "# --- Ejercicio 4: Efecto de las condiciones de contorno ---\n",
  "def solve_case(tipo, x, t, Pe, Da):\n",
  "    if tipo == 'Dirichlet':\n",
  "        C_left = 0.0\n",
  "        C_right = 0.0\n",
  "    elif tipo == 'Neumann':\n",
  "        # Para Neumann homogénea (gradiente cero), replicamos el penúltimo valor\n",
  "        def C_left_bc(_): return initial_pulse(x[0])  # valor constante\n",
  "        def C_right_bc(_): return None  # manejado internamente\n",
  "        return solve_adre_ftcs_neumann(x, t, Pe, Da, initial_pulse, C_left_bc, C_right_bc)\n",
  "    elif tipo == 'Entrada fija':\n",
  "        C_left = 1.0\n",
  "        C_right = 0.0\n",
  "    else:\n",
  "        raise ValueError('Tipo de condición no reconocido')\n",
  "    return solve_adre_ftcs(x, t, Pe, Da, initial_pulse, C_left, C_right)"
 ]
}
