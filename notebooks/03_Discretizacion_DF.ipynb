  "# --- Ejercicio 1: Esquema FTCS con condiciones mixtas ---\n",
  "def solve_adre_ftcs_mixed_bc(x, t, Pe, Da, C_initial):\n",
  "    Nx = len(x) - 1\n",
  "    Nt = len(t) - 1\n",
  "    dx = x[1] - x[0]\n",
  "    dt = t[1] - t[0]\n",
  "\n",
  "    C = np.zeros((Nt+1, Nx+1))\n",
  "\n",
  "    if callable(C_initial):\n",
  "        C[0, :] = C_initial(x)\n",
  "    else:\n",
  "        C[0, :] = C_initial\n",
  "\n",
  "    for j in range(Nt):\n",
  "        # Condición de Dirichlet izquierda (valor fijo)\n",
  "        C[j+1, 0] = 1.0\n",
  "\n",
  "        for i in range(1, Nx):\n",
  "            diffusion = (C[j, i+1] - 2*C[j, i] + C[j, i-1]) / dx**2\n",
  "            advection = Pe * (C[j, i+1] - C[j, i-1]) / (2*dx)\n",
  "            reaction = Da * C[j, i]\n",
  "            C[j+1, i] = C[j, i] + dt * (diffusion - advection - reaction)\n",
  "\n",
  "        # Condición de Neumann derecha (gradiente nulo)\n",
  "        C[j+1, Nx] = C[j+1, Nx-1]\n",
  "\n",
  "    return C"
 ]
}
